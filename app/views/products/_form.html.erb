<%= form_for(@product, remote: true) do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">
      <%= ( f.object.new_record? ? "Create a new product" : "Update product") %>
    </h4>
  </div>
  <div class="modal-body">
    
  <ul class="errors"></ul>  

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :price, "Price (like 2.99)" %>
    <%= f.text_field :price, value: print_price(@product.price), class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :image_url %>
    <%= f.text_field :image_url, class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :stock %>
    <%= f.text_field :stock, class:"form-control" %>
  </div>

  </div>
  <div class="modal-footer">
    <%= f.submit class:"btn btn-outline-success" %> 
  </div>
<% end %>