<h1>All Products:</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Price</th>
      <th>Description</th>
      <th>Stock</th>
      <th>Buy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag("products/#{product.image_url}") %></td>
        <td><%= product.title %></td>
        <td><%= print_price(product.price) %></td>
        <td><%= product.description %></td>
        <td><%= print_stock(product.stock) %></td>
        <td><%= button_to "Add to Cart", order_items_path(product_id: product.id) %>
        <td><%= link_to 'Details', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create a New Product', new_product_path %>
