<% if @order.order_items.find_by(product_id: product.id) != nil %>
      
  <%= button_to order_items_path(product_id: product.id, change: -1), class:"btn btn-success", remote: true  do %>
    <span><%= icon('minus') %></span>
  <% end %>
  
  <%= form_for(@order.order_items.find_by(product_id: product.id), remote: true) do |f| %>  
    <%= f.text_field :quantity, class:"quantity-field" %>
  <% end %>
  
  <%= button_to order_items_path(product_id: product.id, change: 1), class:"btn btn-success", remote: true  do %>
    <span><%= icon('plus') %></span>
  <% end %>

<% else %>
  <%= button_to "Add to Cart", order_items_path(product_id: product.id, change: 1), class:"btn btn-success", remote: true %>
<% end %>