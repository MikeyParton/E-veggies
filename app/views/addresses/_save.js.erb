$(".modal-content ul.errors").html("")
<% if @address.errors.any? %>
  <% @address.errors.full_messages.each do |message| %>
    $(".active ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("#page-content").html("<%= j render 'orders/confirm' %>");
  $("#product-modal").modal("hide")
  <% if @address == nil %>
  <% else %>
  <% end %>
<% end %>